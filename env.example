# .env.example

# Set to 'development' or 'production'
NODE_ENV=development

# Secret string used to sign cookies (change this in production!)
COOKIE_SECRET=your_cookie_secret_here

# Port to run the server on
PORT=5000

# If true, cookies require HTTPS (use false for local dev)
COOKIE_SECURE=false

# SameSite setting for cookies (recommended: 'lax' or 'strict')
COOKIE_SAMESITE=lax